@import "./util"

list()
	.list
		.content
			padding-bottom $rem(20px)
			.navigator
				margin-top 1.0rem
				display flex
				-webkit-flex-wrap: nowrap
			.detail
				$setFlex(,flex-start)
		.navigator .sub
			flex 1
			height $rem(144px)
			background white
			border-right none
			$setFlex()
			font-size $rem(40px)
			.last
				border-right 1.0rem solid #5D9DDA
		.detail
			.menu
				width 20%
			.main
				flex 2
		.menu .sub
			width 100%
			height $rem(116px)
			$setFlex()
			$setColor(#e6e6e6,#191919)
			margin-bottom $rem(2px)
			font-size $rem(40px)
			a
				$setFlex()
				color #191919
			&.selected
				$setColor(#ffc000)
				a
					$setColor(,#772b00)
		.main .item 
			$setFlex()
			border $rem(1px) solid #d9d9d9
			margin-bottom $rem(5px)
		.main .item
			.pic
				width 44.4%
				height 100%
				background #00ffdd
				text-align center
				img
					max-width 100%
			.note
				flex 2
		.note
			p 
				padding-left 11.5%
				color #4b4b4b
			.name
				text-align left
				font-size $rem(33px)
				border-bottom none
				border-top none
			.service
				text-align left
				font-size $rem(30px)
				border-bottom none
			.extral
				font-size $rem(30px)
				$setFlex(space-between)
				
		.extral
			span
				$setFlex(space-between)
			em
				flex 1
				font-weight normal
				color #f36e21
			strong	
				flex 1
				font-weight normal
				text-align center