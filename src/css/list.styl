@import "./util"

list()
	.list
		.content
			padding-bottom $rem(20px)
			.navigator
				margin-top 1.0rem
				display flex
				-webkit-flex-wrap: nowrap
			.detail
				$setFlex(,flex-start)
		.navigator .sub
			flex 1
			height $rem(144px)
			background white
			border-right none
			$setFlex()
			font-size $rem(40px)
			.last
				border-right 1.0rem solid #5D9DDA
		.detail
			.menu
				width 20%
			.main
				flex 2
				
		.menu .sub
			width 100%
			height $rem(116px)
			$setFlex()
			$setColor(#e6e6e6,#191919)
			margin-bottom $rem(2px)
			font-size $rem(40px)
			a
				$setFlex()
				color #191919
			&.selected
				$setColor(#ffc000)
				a
					$setColor(,#772b00)
		.main .item 
			display flex
			width 100%
			border $rem(1px) solid #d9d9d9
			margin-bottom $rem(5px)
		.main .item
			.pic
				flex 1
				height 100%
				background #00ffdd
				text-align center
				img
					max-width 100%
			.note
				flex 1

		.note 
			.name
				color #333
				text-align center
				font-size 1.6rem
				border-bottom none
				border-top none
			.service
				color #999
				text-align center
				font-size 1.4rem
				
				border-bottom none
			.extral
				color #999
				display flex
				font-size 1.4rem
				
		.extral
			span
				font-size 1.4rem
				color #fff
				flex 1
			em
				color #b4806b
				font-size 1.4rem
				margin-left 1.0rem
				font-weight normal
			strong	
				flex 1
				color #999
				margin-right  1.0rem
				font-weight normal
				text-align right